@model Email_Template.Models.UsuarioCadastroModel
@{
    ViewData["Title"] = "Cadastrar";
}

<div class="content-cadastrar">

    <form asp-action="Cadastrar" asp-controller="Home" class="form-cadastrar">
        <h1>Formulario de Cadastrar</h1>
        <div class="form-item">
            <label for="">Nome </label>
            <input asp-for="Nome" type="text">
            <span asp-validation-for="Nome"></span>
        </div>

        <div class="form-item">
            <label for="">Email </label>
            <input asp-for="Email" type="text">
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-item">
            <label for="">Senha </label>
            <input asp-for="Senha" type="password">
            <span asp-validation-for="Senha"></span>
        </div>

        <div class="form-item btn">
            <input type="submit" value="Cadastrar">
        </div>
    </form>
</div>
